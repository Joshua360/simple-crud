html 
    head 
        title Hello Pug!
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        link(rel="stylesheet", href="/static/css/style.css")
    body
        .table-container
            table.table
                thead
                    tr
                    th(scope='col') ID
                    th(scope='col') FirstName
                    th(scope='col') LastName
                    th(scope='col') Semester
                    th(scope='col') Edit
                    th(scope='col') Delete
                tbody
                    each student in students
                        tr
                            td(scope='row') #{student.id}
                            td #{student.firstname}
                            td #{student.lastname}
                            td #{student.semester}
                            td
                                a(href='/students/edit/' + student.id)
                                  button.btn.btn-primary(type='button') Edit
                            td
                                a(href='/students/delete/' + student.id)
                                  button.btn.btn-danger(type='button') Delete
            //- create button
            a(href='/') 
                button.btn.btn-primary(type='button') Add new Student

